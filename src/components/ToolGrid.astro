---
import ToolCard from './ToolCard.astro';
import type { Tool } from '../types';

interface Props {
  tools: Tool[];
}

const { tools } = Astro.props;
---

<div class="container mx-auto px-4 py-16 relative">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 -z-10 opacity-5">
    <div class="absolute top-10 left-10 w-32 h-32 bg-blue-500 rounded-full"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-indigo-500 rounded-full"></div>
  </div>

  <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Available Tools</h2>
  <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
    Explore our collection of developer tools designed to make your workflow more efficient.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {tools.map(tool => (
      <ToolCard {...tool} />
    ))}
  </div>
</div> 